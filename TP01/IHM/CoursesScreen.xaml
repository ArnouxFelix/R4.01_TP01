<Window x:Class="IHM.CoursesScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IHM"
        mc:Ignorable="d"
        Title="CoursesScreen" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <ListBox x:Name="ListeCourses" Grid.Column="0" Grid.RowSpan="3"/>
        <Button x:Name="CreateNewCourse" Content="Create" Grid.Column="1" Grid.Row="0" Height="40" Width="80" Click="CreateCourse" />
        <Button x:Name="EditCurrentCourse" Content="Edit" Grid.Column="1" Grid.Row="1" Height="40" Width="80" Click="EditCourse" />
        <Button x:Name="DeleteCurrentCourse" Content="Delete" Grid.Column="1" Grid.Row="2" Height="40" Width="80" Click="DeleteCourse" />
    </Grid>
</Window>
